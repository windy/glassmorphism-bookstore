<div class="space-y-6">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold">Administrators Management</h1>
    <% if current_admin.can_manage_administrators? %>
      <%= link_to new_admin_administrator_path, class: "btn btn-primary" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        New Administrator
      <% end %>
    <% end %>
  </div>

  <!-- Administrators Table -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <% if @administrators.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra w-full">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Created At</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @administrators.each do |administrator| %>
                <tr>
                  <td class="font-mono text-sm"><%= administrator.id %></td>
                  <td class="font-semibold">
                    <%= link_to administrator.name, admin_administrator_path(administrator.id), class: "link link-primary" %>
                  </td>
                  <td>
                    <span class="badge <%= administrator.super_admin? ? 'badge-error' : 'badge-primary' %>">
                      <%= administrator.role_name %>
                    </span>
                  </td>
                  <td class="text-sm text-gray-600">
                    <%= administrator.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                  <td class="text-center">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_administrator_path(administrator.id), class: "btn btn-sm btn-ghost" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>
                      <% if current_admin.can_manage_administrators? %>
                        <%= link_to edit_admin_administrator_path(administrator.id), class: "btn btn-sm btn-ghost" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                        <% end %>
                      <% end %>
                      <% if current_admin.can_delete_administrators? %>
                        <% if administrator.can_be_deleted_by?(current_admin) %>
                          <%= link_to admin_administrator_path(administrator.id), method: :delete,
                              data: { confirm: "Are you sure you want to delete this administrator?" },
                              class: "btn btn-sm btn-ghost text-red-600 hover:text-red-800" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                          <% end %>
                        <% else %>
                          <div class="tooltip" data-tip="Cannot delete yourself">
                            <button class="btn btn-sm btn-ghost text-gray-400 cursor-not-allowed" disabled>
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                              </svg>
                            </button>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No administrators</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by creating a new administrator.</p>
          <div class="mt-6">
            <%= link_to new_admin_administrator_path, class: "btn btn-primary" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              New Administrator
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @administrators.respond_to?(:current_page) %>
    <div class="flex justify-center">
      <%= paginate @administrators %>
    </div>
  <% end %>
</div>
