<div class="space-y-6">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to admin_books_path, class: "btn btn-ghost btn-sm" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Books
      <% end %>
      <h1 class="text-3xl font-bold">Book Details</h1>
    </div>

    <div class="flex space-x-3">
      <%= link_to edit_admin_book_path(@book.id), class: "btn btn-primary" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit Book
      <% end %>
      <%= link_to admin_book_path(@book.id), method: :delete,
          data: { confirm: "Are you sure you want to delete this book?" },
          class: "btn btn-error" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Book
      <% end %>
    </div>
  </div>

  <!-- Book Content -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Title</label>
          <p class="text-lg text-gray-900"><%= @book.title %></p>
        </div>

        <!-- Author -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Author</label>
          <p class="text-lg text-gray-900"><%= @book.author %></p>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
          <div class="prose max-w-none">
            <%= simple_format(@book.description) %>
          </div>
        </div>

        <!-- Price -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Price</label>
          <p class="text-lg text-gray-900"><%= @book.price %></p>
        </div>

        <!-- Isbn -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Isbn</label>
          <p class="text-lg text-gray-900"><%= @book.isbn %></p>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
          <p class="text-lg text-gray-900"><%= @book.category %></p>
        </div>

        <!-- Published at -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Published at</label>
          <p class="text-lg text-gray-900"><%= @book.published_at&.strftime('%Y-%m-%d %H:%M') %></p>
        </div>

        <!-- Stock quantity -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Stock quantity</label>
          <p class="text-lg text-gray-900"><%= @book.stock_quantity %></p>
        </div>

        <!-- Metadata -->
        <div class="border-t pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Created At</label>
              <p class="text-sm text-gray-900"><%= @book.created_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Last Updated</label>
              <p class="text-sm text-gray-900"><%= @book.updated_at.strftime("%B %d, %Y at %H:%M") %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
