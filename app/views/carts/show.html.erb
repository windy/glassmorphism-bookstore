<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">购物车</h1>
    <div class="badge badge-primary badge-lg"><%= @cart.total_items %> 件商品</div>
  </div>

  <% if @cart_items.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 购物车商品列表 -->
      <div class="lg:col-span-2 space-y-4">
        <% @cart_items.each do |item| %>
          <div class="card bg-base-100 shadow-md">
            <div class="card-body">
              <div class="flex flex-col sm:flex-row gap-4">
                <!-- 商品图片 -->
                <div class="flex-shrink-0">
                  <% if item.book.images.attached? %>
                    <%= image_tag item.book.images.first, alt: item.book.title,
                                  class: "w-24 h-32 object-cover rounded" %>
                  <% else %>
                    <div class="w-24 h-32 bg-gradient-to-br from-blue-400 to-purple-500 rounded flex items-center justify-center">
                      <span class="text-white text-lg">📚</span>
                    </div>
                  <% end %>
                </div>

                <!-- 商品信息 -->
                <div class="flex-1 space-y-2">
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="font-bold text-lg">
                        <%= link_to item.book.title, book_path(item.book), 
                                    class: "hover:text-primary" %>
                      </h3>
                      <p class="text-base-content/70">作者：<%= item.book.author %></p>
                      <p class="text-sm text-base-content/50">ISBN: <%= item.book.isbn %></p>
                    </div>
                    
                    <!-- 删除按钮 -->
                    <%= link_to cart_item_path(item), method: :delete, 
                                confirm: "确定要删除这本书吗？",
                                class: "btn btn-ghost btn-sm text-error hover:bg-error hover:text-white" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>

                  <!-- 价格和数量 -->
                  <div class="flex justify-between items-center">
                    <div class="flex items-center gap-4">
                      <span class="text-sm">数量: <%= item.quantity %></span>
                      <span class="text-lg font-semibold">单价: ¥<%= item.book.price %></span>
                    </div>
                    <div class="text-xl font-bold text-primary">
                      小计: ¥<%= item.subtotal %>
                    </div>
                  </div>

                  <!-- 库存提示 -->
                  <% if item.quantity > item.book.stock_quantity %>
                    <div class="alert alert-warning alert-sm">
                      <span>库存不足！当前库存：<%= item.book.stock_quantity %> 本</span>
                    </div>
                  <% elsif item.book.stock_quantity <= 5 %>
                    <div class="alert alert-info alert-sm">
                      <span>库存紧张，仅剩 <%= item.book.stock_quantity %> 本</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 订单摘要 -->
      <div class="space-y-4">
        <div class="card bg-primary text-primary-content shadow-lg sticky top-4">
          <div class="card-body">
            <h2 class="card-title mb-4">订单摘要</h2>
            
            <div class="space-y-3">
              <div class="flex justify-between">
                <span>商品数量</span>
                <span><%= @cart.total_items %> 件</span>
              </div>
              
              <div class="divider my-2"></div>
              
              <div class="flex justify-between text-lg font-bold">
                <span>总计</span>
                <span>¥<%= @cart.total_price %></span>
              </div>
            </div>

            <div class="card-actions justify-center mt-6">
              <%= link_to "立即结算", orders_path, method: :post, 
                          params: { cart_id: @cart.id },
                          class: "btn btn-accent btn-block btn-lg" %>
            </div>
          </div>
        </div>

        <!-- 继续购物 -->
        <div class="text-center">
          <%= link_to "← 继续购物", books_path, class: "btn btn-ghost" %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- 空购物车 -->
    <div class="text-center py-16">
      <div class="text-6xl mb-6">🛒</div>
      <h2 class="text-2xl font-semibold mb-4">购物车是空的</h2>
      <p class="text-base-content/70 mb-8">快去挑选您喜欢的书籍吧！</p>
      <%= link_to "开始购物", books_path, 
                  class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>