<!-- 背景装饰气泡 -->
<div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
  <div class="bubble" style="left: 10%; width: 100px; height: 100px; animation-delay: 0s;"></div>
  <div class="bubble" style="left: 20%; width: 60px; height: 60px; animation-delay: 2s;"></div>
  <div class="bubble" style="left: 35%; width: 80px; height: 80px; animation-delay: 4s;"></div>
  <div class="bubble" style="left: 50%; width: 120px; height: 120px; animation-delay: 6s;"></div>
  <div class="bubble" style="left: 65%; width: 70px; height: 70px; animation-delay: 8s;"></div>
  <div class="bubble" style="left: 80%; width: 90px; height: 90px; animation-delay: 10s;"></div>
  <div class="bubble" style="left: 90%; width: 110px; height: 110px; animation-delay: 12s;"></div>
</div>

<!-- 主要内容 -->
<div class="relative z-10">
  <!-- 英雄区域 -->
  <section class="min-h-screen flex items-center justify-center px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center">
        <!-- 主标题 -->
        <div class="mb-8 floating">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-4 text-glow">
            📚 玻璃书屋
          </h1>
          <p class="text-xl md:text-2xl text-white/90 mb-8">
            在透明的世界里，发现知识的光芒
          </p>
        </div>

        <!-- 行动按钮 -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 floating-delayed">
          <%= link_to books_path, class: "btn btn-glass btn-lg px-8 py-4 text-lg border-glow" do %>
            <span class="mr-2">🔍</span> 探索书籍
          <% end %>
          
          <% if user_signed_in? %>
            <%= link_to cart_path, class: "btn btn-glass btn-lg px-8 py-4 text-lg" do %>
              <span class="mr-2">🛒</span> 我的购物车
            <% end %>
          <% else %>
            <%= link_to sign_up_path, class: "btn btn-glass btn-lg px-8 py-4 text-lg" do %>
              <span class="mr-2">✨</span> 立即注册
            <% end %>
          <% end %>
        </div>

        <!-- 特色展示 -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          <div class="card-glass rounded-2xl p-6 floating">
            <div class="text-4xl mb-4">💎</div>
            <h3 class="text-xl font-semibold text-white mb-2">精选书籍</h3>
            <p class="text-white/80">精心挑选的高质量图书，涵盖各个领域</p>
          </div>
          
          <div class="card-glass rounded-2xl p-6 floating-slow">
            <div class="text-4xl mb-4">⚡</div>
            <h3 class="text-xl font-semibold text-white mb-2">快速配送</h3>
            <p class="text-white/80">便捷的购买流程，快速安全的支付体验</p>
          </div>
          
          <div class="card-glass rounded-2xl p-6 floating-delayed">
            <div class="text-4xl mb-4">🌟</div>
            <h3 class="text-xl font-semibold text-white mb-2">会员服务</h3>
            <p class="text-white/80">专属会员优惠，个性化推荐服务</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 热门书籍预览 -->
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-4 text-glow">热门推荐</h2>
        <p class="text-xl text-white/90">发现最受欢迎的精品图书</p>
      </div>

      <!-- 模拟热门书籍展示 -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% [
          { title: "人工智能简史", author: "尼克·博斯特罗姆", category: "科技", price: "68.00" },
          { title: "百年孤独", author: "加西亚·马尔克斯", category: "文学", price: "45.00" },
          { title: "股票投资入门", author: "本杰明·格雷厄姆", category: "投资", price: "52.00" },
          { title: "心理学与生活", author: "理查德·格里格", category: "心理学", price: "89.00" }
        ].each_with_index do |book, index| %>
          <div class="card-glass rounded-xl overflow-hidden hover:scale-105 transition-all duration-300" 
               style="animation-delay: <%= index * 0.2 %>s;">
            <div class="aspect-[3/4] bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500 flex items-center justify-center">
              <span class="text-white text-4xl">📖</span>
            </div>
            <div class="p-4">
              <h3 class="font-semibold text-white mb-1"><%= book[:title] %></h3>
              <p class="text-white/70 text-sm mb-2"><%= book[:author] %></p>
              <div class="flex justify-between items-center">
                <span class="badge badge-outline text-white border-white/30"><%= book[:category] %></span>
                <span class="text-white font-bold">¥<%= book[:price] %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-12">
        <%= link_to books_path, class: "btn btn-glass btn-lg border-glow" do %>
          查看更多书籍 <span class="ml-2">→</span>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 统计信息 -->
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-4xl">
      <div class="glass rounded-3xl p-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div class="pulse-glow rounded-xl p-4">
            <div class="text-3xl font-bold text-white text-glow mb-2">1000+</div>
            <div class="text-white/80">精选书籍</div>
          </div>
          <div class="pulse-glow rounded-xl p-4" style="animation-delay: 0.5s;">
            <div class="text-3xl font-bold text-white text-glow mb-2">500+</div>
            <div class="text-white/80">满意客户</div>
          </div>
          <div class="pulse-glow rounded-xl p-4" style="animation-delay: 1s;">
            <div class="text-3xl font-bold text-white text-glow mb-2">50+</div>
            <div class="text-white/80">专业分类</div>
          </div>
          <div class="pulse-glow rounded-xl p-4" style="animation-delay: 1.5s;">
            <div class="text-3xl font-bold text-white text-glow mb-2">24/7</div>
            <div class="text-white/80">在线服务</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 底部行动区域 -->
  <section class="py-16 px-4">
    <div class="container mx-auto max-w-4xl text-center">
      <div class="glass rounded-3xl p-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 text-glow">
          开始您的阅读之旅
        </h2>
        <p class="text-xl text-white/90 mb-8">
          加入我们，在玻璃书屋中发现无限可能
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <% unless user_signed_in? %>
            <%= link_to sign_up_path, class: "btn btn-glass btn-lg px-10 py-4 text-lg border-glow" do %>
              <span class="mr-2">🚀</span> 立即注册
            <% end %>
          <% end %>
          <%= link_to books_path, class: "btn btn-glass btn-lg px-10 py-4 text-lg" do %>
            <span class="mr-2">📚</span> 浏览图书
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>