<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="card w-full max-w-sm shadow-2xl bg-base-100 min-w-96">
      <div class="card-body">
        <h1 class="text-3xl font-bold text-center">Forgot your password?</h1>
        <p class="text-center text-gray-600 mb-4">Enter your email to receive reset instructions</p>

        <%= form_with(url: identity_password_reset_path, class: "space-y-4") do |form| %>
          <div class="form-control">
            <%= form.label :email, class: "label" do %>
              <span class="label-text">Email</span>
            <% end %>
            <%= form.email_field :email, required: true, autofocus: true, class: "input input-bordered w-full" %>
          </div>

          <div class="form-control mt-6">
            <%= form.submit "Send password reset email", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <%= link_to "Back to sign in", sign_in_path, class: "link link-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
