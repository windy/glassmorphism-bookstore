<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="card w-full max-w-sm shadow-2xl bg-base-100 min-w-96">
      <div class="card-body">
        <h1 class="text-3xl font-bold text-center">Send invitation</h1>
        <p class="text-center text-gray-600 mb-4">Invite someone to join</p>

        <%= form_with(url: invitation_path, class: "space-y-4") do |form| %>
          <div class="form-control">
            <%= form.label :email, class: "label" do %>
              <span class="label-text">Email</span>
            <% end %>
            <%= form.email_field :email, required: true, autofocus: true, class: "input input-bordered w-full" %>
          </div>

          <div class="form-control mt-6">
            <%= form.submit "Send an invitation", class: "btn btn-primary w-full" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
