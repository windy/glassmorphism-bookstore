<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white shadow-xl rounded-lg p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Create New Order</h1>

    <%%= form_with model: @order, local: true, class: "space-y-6" do |form| %>
      <%% if @order.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div>
              <h3 class="text-sm font-medium text-red-800">
                <%%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:
              </h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <%% @order.errors.full_messages.each do |message| %>
                  <li><%%= message %></li>
                <%% end %>
              </ul>
            </div>
          </div>
        </div>
      <%% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
          <%%= form.label :customer_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.text_field :customer_name,
              class: "input input-bordered w-full focus:input-primary",
              placeholder: "Enter your full name",
              required: true %>
        </div>

        <div class="form-group">
          <%%= form.label :customer_email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.email_field :customer_email,
              class: "input input-bordered w-full focus:input-primary",
              placeholder: "your@email.com",
              required: true %>
        </div>
      </div>

      <div class="form-group">
        <%%= form.label :product_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%%= form.text_field :product_name,
            class: "input input-bordered w-full focus:input-primary",
            placeholder: "Product or service name",
            required: true %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="form-group">
          <%%= form.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.number_field :amount,
              step: 0.01,
              min: 0.50,
              class: "input input-bordered w-full focus:input-primary",
              placeholder: "0.00",
              required: true %>
        </div>

        <div class="form-group">
          <%%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%%= form.select :currency,
              options_for_select([
                ['US Dollar (USD)', 'usd'],
                ['Euro (EUR)', 'eur'],
                ['British Pound (GBP)', 'gbp']
              ], 'usd'),
              {},
              { class: "select select-bordered w-full focus:select-primary" } %>
        </div>
      </div>

      <div class="pt-6">
        <div class="flex items-center justify-between">
          <%%= form.submit "Proceed to Payment",
              class: "btn btn-primary btn-lg px-8" %>
        </div>
      </div>

      <div class="mt-6 p-4 bg-blue-50 rounded-lg">
        <p class="text-sm text-blue-700">
          <strong>Secure Payment:</strong> You will be redirected to Stripe's secure checkout page.
        </p>
      </div>
    <%% end %>
  </div>
</div>
