<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="bg-white shadow-xl rounded-lg overflow-hidden">
    <div class="bg-gradient-to-r from-blue-500 to-purple-600 px-8 py-6">
      <h1 class="text-3xl font-bold text-white">Order Details</h1>
      <p class="text-blue-100 mt-2">Order #<%%= @order.id %></p>
    </div>

    <div class="px-8 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Customer Information</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-500">Name</label>
              <p class="text-lg text-gray-900"><%%= @order.customer_name %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-500">Email</label>
              <p class="text-lg text-gray-900"><%%= @order.customer_email %></p>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-4">Product & Payment</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-500">Product</label>
              <p class="text-lg text-gray-900"><%%= @order.product_name %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-500">Amount</label>
              <p class="text-2xl font-bold text-green-600"><%%= @order.formatted_amount %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-500">Status</label>
              <span class="badge badge-primary"><%%= @order.display_status %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="px-8 py-6 bg-white border-t border-gray-200">
      <div class="flex items-center justify-between">
        <%%= link_to "â† Back to Home", '/', class: "btn btn-ghost" %>
        <%%= link_to "Try Again", new_order_path, class: "btn btn-primary" if @order.failed? %>
      </div>
    </div>
  </div>
</div>
